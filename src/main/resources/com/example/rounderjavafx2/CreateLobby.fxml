<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>




<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rounderjavafx2.controller.CreateLobby"
      alignment="CENTER">
    <Label text="Welcome to our game" style="-fx-font-family: 'Inter'; -fx-font-size: 47px; -fx-font-weight: bold; -fx-padding: 0;" />
    <Label text="ROUNDER" style="-fx-font-family: 'Inter'; -fx-font-size: 64px; -fx-font-weight: bold; -fx-padding: 10px 0; -fx-text-fill: #7DDDFC; " />
    <HBox spacing="10" alignment="CENTER">
        <Label text="Enter your name" style="-fx-font-family: 'Inter'; font-size: 24px;" />
        <TextField promptText="Enter your name" />
    </HBox>
    <HBox spacing="10" alignment="CENTER" style="-fx-font-family: 'Inter'; -fx-font-size: 16px;  -fx-padding: 20px;">
        <Button text="Create Game"  />
        <Button text="Join Game"  />
    </HBox>
</VBox>